<p style="color: green"><%= notice %></p>

<%= link_to "Back to Space Agencies list", space_agencies_path %>

<h2><%= @space_agency.name %></h2>

<%= select_tag :by_subcategory, options_from_collection_for_select(Subcategory.all, "id", "name", params[:by_subcategory].presence), include_blank: "All Subcategories", onchange: "top.location.href='?by_subcategory=' + this.options[this.selectedIndex].value;" %>

<p>
  <table>
    <tr><th><%= pluralize @experiments.size, "experiment" %> sponsored by <i><%= @space_agency.name %></i></th></tr>
    <% @experiments.each do |ex| %>
      <tr><td><%= link_to ex.name, ex %> <%= revised_icon(ex) %></td></tr>
    <% end %>
  </table>
</p>