<%= form_for(@keyword) do |f| %>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="col">
      <%= f.label :variations, "Comma separated list" %>
      <%= f.text_field :variations, class: "form-control" %>
    </div>
  </div>
</div>


<div class="form-actions">
  <%= f.submit class: "btn paper-submit" %>
</div>
<% end %>
